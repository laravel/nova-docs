{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Laravel Nova",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "href": "https://nova.laravel.com"
  },
  "favicon": "/favicon.png",
  "background": {
    "style": "windows"
  },
  "colors": {
    "primary": "#4BA2E3",
    "light": "#4BA2E3",
    "dark": "#4BA2E3",
    "anchors": {
      "from": "#4BA2E3",
      "to": "#4BA2E3"
    }
  },
  "font": {
    "headings": {
      "family": "Figtree"
    },
    "body": {
      "family": "Figtree"
    }
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "mailto:nova@laravel.com"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://nova.laravel.com"
  },
  "anchors": [
    {
      "name": "Community",
      "icon": "discord",
      "url": "https://discord.com/invite/laravel"
    },
    {
      "name": "Blog",
      "icon": "newspaper",
      "url": "https://blog.laravel.com/nova"
    }
  ],
  "tabs": [
    {
      "name": "Documentation",
      "url": "/"
    },
    {
      "name": "Knowledge Base",
      "url": "kb"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": [
        "installation",
        "releases",
        "upgrade",
        "support",
        "code-of-conduct"
      ]
    },
    {
      "group": "Resources",
      "pages": [
        "resources/the-basics",
        "resources/fields",
        "resources/date-fields",
        "resources/repeater-fields",
        "resources/relationships",
        "resources/validation",
        "resources/authorization"
      ]
    },
    {
      "group": "Search",
      "pages": [
        "search/the-basics",
        "search/global-search",
        "search/scout-integration"
      ]
    },
    {
      "group": "Filters",
      "pages": [
        "filters/defining-filters",
        "filters/registering-filters"
      ]
    },
    {
      "group": "Lenses",
      "pages": [
        "lenses/defining-lenses",
        "lenses/registering-lenses"
      ]
    },
    {
      "group": "Actions",
      "pages": [
        "actions/defining-actions",
        "actions/registering-actions"
      ]
    },
    {
      "group": "Metrics",
      "pages": [
        "metrics/defining-metrics",
        "metrics/registering-metrics"
      ]
    },
    {
      "group": "Digging Deeper",
      "pages": [
        "customization/dashboards",
        "customization/menus",
        "customization/notifications",
        "customization/impersonation",
        "customization/tools",
        "customization/resource-tools",
        "customization/cards",
        "customization/fields",
        "customization/filters",
        "customization/frontend",
        "customization/assets",
        "customization/localization",
        "customization/stubs"
      ]
    }, {
      "group": "Knowledge Base",
      "pages": [
          "kb/faq",
          "kb/invoices"
      ]
    }
  ],
  "feedback": {
    "thumbsRating": true
  },
  "footerSocials": {
    "x": "https://x.com/laravelphp",
    "github": "https://github.com/laravel",
    "discord": "https://discord.com/invite/laravel",
    "linkedin": "https://linkedin.com/company/laravel"
  }
}
